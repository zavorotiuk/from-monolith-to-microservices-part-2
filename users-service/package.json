    "author": "QuartileOne",
    "license": "ISC",
    "lint-staged": {
        "*.{ts,js,json,css,scss,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "config": "^3.1.0",
        "dotenv": "^8.0.0",
        "jsonwebtoken": "^8.5.1",
        "koa": "^2.7.0",
        "koa-bodyparser": "^4.2.1",
        "koa-compose": "^4.1.0",
        "koa-context-validator": "^0.4.1",
        "koa-router": "^7.4.0",
        "mongoose": "^5.6.0",
        "tslint": "^5.17.0",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/jest": "^24.0.14",
        "@types/jsonwebtoken": "^8.3.2",
        "@types/koa": "^2.0.48",
        "@types/koa-bodyparser": "^4.3.0",
        "@types/koa-compose": "^3.2.4",
        "@types/koa-router": "^7.0.40",
        "@types/mongodb": "^3.1.28",
        "@types/mongoose": "^5.5.6",
        "@types/node": "^12.0.8",
        "@types/winston": "^2.4.4",
        "jest": "^24.8.0",
        "lint-staged": "^8.2.1",
        "nodemon": "^1.19.1",
        "prettier": "^1.18.2",
        "reflect-metadata": "^0.1.13",
        "supertest": "^4.0.2",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.3.0",
        "typescript": "^3.5.2"
    }
